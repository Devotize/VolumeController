<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/notification_shape"
    android:layout_height="256dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_outline_volume_up_24"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:layout_marginStart="5dp">

                <ProgressBar
                    android:id="@+id/volume_media_progress_bar"
                    android:layout_width="match_parent"
                    style="@style/VolumeProgressBar"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_gravity="center"
                    />

                <FrameLayout
                    android:id="@+id/volume_media_up"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    />

                <FrameLayout
                    android:id="@+id/volume_media_down"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"/>

            </FrameLayout>

        </LinearLayout>


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_outline_notifications_24"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:layout_marginStart="5dp">

            <ProgressBar
                android:id="@+id/volume_ring_progress_bar"
                android:layout_width="match_parent"
                style="@style/VolumeProgressBar"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_gravity="center"
                />

            <FrameLayout
                android:id="@+id/volume_ring_up"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                />

            <FrameLayout
                android:id="@+id/volume_ring_down"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_gravity="start">


            </FrameLayout>

        </FrameLayout>

    </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_outline_alarm_24"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:layout_marginStart="5dp">

            <ProgressBar
                android:id="@+id/volume_alarm_progress_bar"
                android:layout_width="match_parent"
                style="@style/VolumeProgressBar"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_gravity="center"
                />

            <FrameLayout
                android:id="@+id/volume_alarm_up"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                />

            <FrameLayout
                android:id="@+id/volume_alarm_down"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_gravity="start">


            </FrameLayout>

        </FrameLayout>

    </LinearLayout>

    </FrameLayout>

</LinearLayout>